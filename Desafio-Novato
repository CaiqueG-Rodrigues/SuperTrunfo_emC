#include <stdio.h>
#include <locale.h>

int main () {
    setlocale(LC_ALL, "Portuguese");

    //Declarando as variáveis CARTA ESTADO A

    char estado_carta1;
    char codigo_carta1[4];
    char Nome_Cidade1[50];
    int Populacao1;
    float Area1;
    float PIB1;
    int turisticos1;

    //Lendo dados da CARTA ESTADO A

        printf("---Cadastrando Dados da PRIMEIRA Carta---\n");

        printf("Escolha o nome do PRIMEIRO ESTADO: (ex: A)\n");
        scanf(" %c", &estado_carta1);

        printf("Digite o CODIGO do ESTADO (ex: A01):\n");
        scanf(" %s", codigo_carta1);
        // Aqui tive que ir pesquisar pois estava quebrando meu código quando escrevia nome de estado separado e ainda não vimos sobre fgets...
        printf("Digite o NOME da CIDADE:\n");
        scanf(" %49[^\n]", Nome_Cidade1);
        getchar(); // Para consumir o caractere de nova linha deixado pelo scanf anterior

        printf("Digite a POPULAÇÃO:\n");
        scanf(" %d", &Populacao1);

        printf("Digite a AREA (em Km²):\n");
        scanf(" %f", &Area1);

        printf("Digite o PIB (em bilhões de reais):\n");
        scanf(" %f", &PIB1);

        printf("Digite a quantidade de PONTOS TURÍSTICOS:\n");
        scanf(" %d", &turisticos1);

        printf("\n"); // Pulando uma linha pra manter o código e separar as entradas de ambas as cartas



    //Declarando as variáveis CARTA ESTADO B

    char estado_carta2;
    char codigo_carta2[4];
    char Nome_Cidade2[50];
    int Populacao2;
    float Area2;
    float PIB2;
    int turisticos2;


    //Lendo dados da CARTA ESTADO B
        printf("---Cadastrando Dados da SEGUNDA Carta---\n");

        printf("Escolha o nome do SEGUNDO ESTADO: (ex: B)\n");
        scanf(" %c", &estado_carta2);

        printf("Digite o CODIGO do ESTADO (ex: B02):\n");
        scanf(" %s", codigo_carta2);

        printf("Digite o NOME da CIDADE:\n");
        scanf(" %49[^\n]", Nome_Cidade2);
        getchar(); // Para consumir o caractere de nova linha deixado pelo scanf anterior

        printf("Digite a POPULAÇÃO:\n");
        scanf(" %d", &Populacao2);

        printf("Digite a AREA (em Km²):\n");
        scanf(" %f", &Area2);

        printf("Digite o PIB (em bilhões de reais):\n");
        scanf(" %f", &PIB2);

        printf("Digite a quantidade de PONTOS TURÍSTICOS:\n");
        scanf(" %d", &turisticos2);

        printf("\n"); // Pulando uma linha pra manter o código e separar as entradas de ambas as cartas




    // Exibindo os dados da CARTA A

        printf("---Dados da Carta 1---\n");
        printf("\n"); // Pulando uma linha

        printf("Carta 1:\n");

        printf("Estado: %c\n", estado_carta1);

        printf("Código: %s\n", codigo_carta1);

        printf("Nome da Cidade: %s\n", Nome_Cidade1);

        printf("População: %d habitantes\n", Populacao1);

        printf("Área: %.2f km²\n", Area1);

        printf("PIB: %.2f bilhões de reais\n", PIB1);

        printf("Pontos Turísticos: %d na cidade\n", turisticos1);

        printf("\n"); // Pulando uma linha


    // Exibindo os dados da CARTA B

        printf("---Dados da Carta 2---\n");
        printf("\n"); // Pulando uma linha

        printf("Carta 2:\n");

        printf("Estado: %c\n", estado_carta2);

        printf("Código: %s\n", codigo_carta2);

        printf("Nome da Cidade: %s\n", Nome_Cidade2);

        printf("População: %d habitantes\n", Populacao2);

        printf("Área: %.2f km²\n", Area2);

        printf("PIB: %.2f bilhões de reais\n", PIB2);

        printf("Pontos Turísticos: %d na cidade\n", turisticos2);


return 0;

}
